<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ShadowFrameLayout">
        <attr name="bgColor" format="color"/>
        <attr name="bgRadius" format="dimension"/>
        <attr name="bgRadiusLeftTop" format="dimension"/>
        <attr name="bgRadiusRightTop" format="dimension"/>
        <attr name="bgRadiusRightBottom" format="dimension"/>
        <attr name="bgRadiusLeftBottom" format="dimension"/>


        <attr name="shadowAlpha"    format="float"/>
        <attr name="shadowWidth"        format="dimension"/>
        <attr name="shadowOffsetLeft"        format="dimension"/>
        <attr name="shadowOffsetTop"        format="dimension"/>
        <attr name="shadowOffsetRight"        format="dimension"/>
        <attr name="shadowOffsetBottom"        format="dimension"/>
        <attr name="shadowStartColor"        format="color"/>
        <attr name="shadowEndColor"        format="color"/>
        <attr name="shadowClipOutLength" format="dimension"/>
        <attr name="shadowClipInLength" format="dimension"/>
        <attr name="onlyLinear" format="boolean"/>
        <attr name="controlPointFirstY" format="string"/>
        <attr name="controlPointSecondY" format="string"/>

    </declare-styleable>
    <attr name="ShadowFrameLayoutStyle" format="reference"/>

    <style name="Base.ShadowLayout" parent="android:Widget">
        <item name="bgColor">@color/customCardView_default_bgColor</item>
        <item name="shadowAlpha">1</item>
        <item name="shadowWidth">@dimen/customCardView_default_shadowWidth</item>
        <item name="shadowOffsetLeft">@dimen/customCardView_default_shadowOffsetX</item>
        <item name="shadowOffsetTop">@dimen/customCardView_default_shadowOffsetY</item>
        <item name="shadowStartColor">@color/customCardView_default_shadowStartColor</item>
        <item name="shadowEndColor">@color/customCardView_default_shadowEndColor</item>
        <item name="controlPointFirstY">@fraction/customCardView_default_controlPointFirstY</item>
        <item name="controlPointSecondY">@fraction/customCardView_default_controlPointSecondY</item>
    </style>
    <style name="ShadowLayout" parent="Base.ShadowLayout">

    </style>

    <color name="customCardView_default_bgColor">#ffffff</color>
    <dimen name="customCardView_default_shadowWidth">12dp</dimen>
    <dimen name="customCardView_default_shadowOffsetX">0px</dimen>
    <dimen name="customCardView_default_shadowOffsetY">0px</dimen>
    <color name="customCardView_default_shadowStartColor">#0A000000</color>
    <color name="customCardView_default_shadowEndColor">#00000000</color>
    <fraction name="customCardView_default_controlPointFirstY">0.8</fraction>
    <fraction name="customCardView_default_controlPointSecondY">1</fraction>
</resources>