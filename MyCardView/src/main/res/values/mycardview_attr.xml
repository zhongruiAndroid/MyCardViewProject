<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="cardViewStyle" format="reference"/>

    <color name="cardview_dark_background">#FF424242</color>
    <color name="cardview_light_background">#FFFFFFFF</color>
    <color name="cardview_shadow_start_color">#1c000000</color>
    <color name="cardview_shadow_end_color">#03000000</color>
    <color name="cardview_shadow_center_color">#00000000</color>
    <dimen name="cardview_compat_inset_shadow">1dp</dimen>
    <dimen name="cardview_default_elevation">2dp</dimen>
    <dimen name="cardview_default_radius">2dp</dimen>
    <dimen name="cardview_default_shadow_offset_x">0px</dimen>
    <dimen name="cardview_default_shadow_offset_y">0px</dimen>

    <declare-styleable name="MyCardView">
        <attr name="cardBackgroundColor" format="color"/>
        <attr name="cardCornerRadius"    format="dimension"/>
        <attr name="cardElevation"        format="dimension"/>

        <attr name="cardShadowOffsetX"        format="dimension"/>
        <attr name="cardShadowOffsetY"        format="dimension"/>
        <attr name="cardShadowStartColor"        format="dimension"/>
        <attr name="cardShadowCenterColor"        format="dimension"/>
        <attr name="cardShadowEndColor"        format="dimension"/>

        <attr name="cardMaxElevation"    format="dimension"/>
        <attr name="cardUseCompatPadding" format="boolean"/>
        <attr name="cardPreventCornerOverlap" format="boolean"/>
        <attr name="contentPadding"      format="dimension"/>
        <attr name="contentPaddingLeft" format="dimension"/>
        <attr name="contentPaddingRight" format="dimension"/>
        <attr name="contentPaddingTop" format="dimension"/>
        <attr name="contentPaddingBottom" format="dimension"/>
        <attr name="android:minWidth"/>
        <attr name="android:minHeight"/>
    </declare-styleable>

    <style name="Base.MyCardView" parent="android:Widget">
        <item name="cardCornerRadius">@dimen/cardview_default_radius</item>
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
        <item name="cardMaxElevation">@dimen/cardview_default_elevation</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardBackgroundColor">@color/cardview_light_background</item>

        <item name="cardShadowStartColor">@color/cardview_shadow_start_color</item>
        <item name="cardShadowCenterColor">@color/cardview_shadow_center_color</item>
        <item name="cardShadowEndColor">@color/cardview_shadow_end_color</item>
        <item name="cardShadowOffsetX">@dimen/cardview_default_shadow_offset_x</item>
        <item name="cardShadowOffsetY">@dimen/cardview_default_shadow_offset_y</item>
    </style>

    <style name="MyCardView" parent="Base.MyCardView">
    </style>

    <style name="MyCardView.Dark">
        <item name="cardBackgroundColor">@color/cardview_dark_background</item>
    </style>

    <style name="MyCardView.Light">
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
    </style>



<!--&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&-->

    <declare-styleable name="CustomCardView">
        <attr name="bgColor" format="color"/>
        <attr name="shadowRadius"    format="dimension"/>
        <attr name="shadowRadiusLeftTop" format="dimension"/>
        <attr name="shadowRadiusRightTop" format="dimension"/>
        <attr name="shadowRadiusRightBottom" format="dimension"/>
        <attr name="shadowRadiusLeftBottom" format="dimension"/>
        <attr name="shadowAlpha"    format="float"/>
        <attr name="shadowWidth"        format="dimension"/>
        <attr name="shadowOffsetLeft"        format="dimension"/>
        <attr name="shadowOffsetTop"        format="dimension"/>
        <attr name="shadowOffsetRight"        format="dimension"/>
        <attr name="shadowOffsetBottom"        format="dimension"/>
        <attr name="shadowStartColor"        format="color"/>
        <attr name="shadowCenterColor"        format="color"/>
        <attr name="shadowEndColor"        format="color"/>
        <attr name="shadowStartColorWeight"        format="float"/>
        <attr name="shadowCenterColorWeight"        format="float"/>
        <attr name="shadowEndColorWeight"        format="float"/>
    </declare-styleable>
    <style name="Base.CustomCardView" parent="android:Widget">
        <item name="bgColor">@color/customCardView_default_bgColor</item>
        <item name="shadowRadius">@dimen/customCardView_default_shadowRadius</item>
        <item name="shadowRadiusLeftTop">@dimen/customCardView_default_shadowRadiusLeft</item>
        <item name="shadowRadiusRightTop">@dimen/customCardView_default_shadowRadiusTop</item>
        <item name="shadowRadiusRightBottom">@dimen/customCardView_default_shadowRadiusRight</item>
        <item name="shadowRadiusLeftBottom">@dimen/customCardView_default_shadowRadiusBottom</item>
        <item name="shadowAlpha">1</item>
        <item name="shadowWidth">@dimen/customCardView_default_shadowWidth</item>
        <item name="shadowOffsetLeft">@dimen/customCardView_default_shadowOffsetX</item>
        <item name="shadowOffsetTop">@dimen/customCardView_default_shadowOffsetY</item>
        <item name="shadowStartColor">@color/customCardView_default_shadowStartColor</item>
        <item name="shadowCenterColor">@color/customCardView_default_shadowCenterColor</item>
        <item name="shadowEndColor">@color/customCardView_default_shadowEndColor</item>
        <item name="shadowStartColorWeight">1</item>
        <item name="shadowCenterColorWeight">0</item>
        <item name="shadowEndColorWeight">1</item>
    </style>

    <style name="CustomCardView" parent="Base.CustomCardView">
    </style>
    <attr name="CustomCardViewStyle" format="reference"/>

    <color name="customCardView_default_bgColor">#ffffff</color>
    <dimen name="customCardView_default_shadowRadius">10dp</dimen>
    <dimen name="customCardView_default_shadowRadiusLeft">10dp</dimen>
    <dimen name="customCardView_default_shadowRadiusTop">10dp</dimen>
    <dimen name="customCardView_default_shadowRadiusRight">10dp</dimen>
    <dimen name="customCardView_default_shadowRadiusBottom">10dp</dimen>
    <dimen name="customCardView_default_shadowWidth">10dp</dimen>
    <dimen name="customCardView_default_shadowOffsetX">0px</dimen>
    <dimen name="customCardView_default_shadowOffsetY">0px</dimen>
    <color name="customCardView_default_shadowStartColor">#00000000</color>
    <color name="customCardView_default_shadowCenterColor">#00000000</color>
    <color name="customCardView_default_shadowEndColor">#e6e6e6</color>
</resources>